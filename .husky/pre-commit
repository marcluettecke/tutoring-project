#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Checking code style..."
npm run lint:check

# Run TypeScript check
echo "🔧 Checking TypeScript..."
npm run tsc:check

# Run tests
echo "🧪 Running tests..."
npm run test:run

echo "✅ Pre-commit checks passed!"